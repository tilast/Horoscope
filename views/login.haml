.loginForm
  %h2
    Login
  .errors.js-login-errors
    #{flash[:login_error]}
  %form{:method => "post", :action => "/login.json"}
    %p
      %label
        %span="Login: "
        %br
        %input{:type => "text", :name => "login", :class => "js-user-login"}
    %p
      %label
        %span="Password: "
        %br
        %input{:type => "password", :name => "password", :class => "js-user-password"}
    %p
      %label
        %input{:type => "submit", :name => "go_login", :value => "Log in", :class => "js-login"}