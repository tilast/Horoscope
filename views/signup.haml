%span
  #{flash[:signup_error]}
%form{:method => "post"}
  %p
    %label
      %span="Login: "
      %input{:type => "text", :name => "login"}
  %p
    %label
      %span="Password: "
      %input{:type => "password", :name => "password"}
  %p
    %label
      %span="Password again: "
      %input{:type => "password", :name => "password_again"}
